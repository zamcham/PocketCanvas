<div class='container wb'>
<%= form_for @transaction_record, url: tag_transaction_records_path do |f| %>
  <div class="form-group">
    <%= f.label :tag_id, 'Category:' %>
    <%= f.collection_select :tag_id, current_user.tags, :id, :name, prompt: 'Select a Category', class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :transaction_name %>
    <%= f.text_field :transaction_name, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: 'form-control', step: '0.01', required: true %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit 'Create Transaction', class: 'btn btn-primary g-button', id: 'submit-button', data: { disable_with: 'Creating...' } %>
<% end %>
</div>

